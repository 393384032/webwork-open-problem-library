Context("Numeric");
#given
$theta = 30;#random(20,40,1);
$thetaR = $theta*pi/180;

#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*499;
$height = $imgScale*418;

#computation
$iG = 5/12;
$n = 5*9.81*cos($thetaR);
$aGt = (20-.3*$n)/5;
$alpha = 5*$aGt*cos($thetaR)/(2*$iG);
$aGAt = -$alpha/2;
$a = $aGt - $aGAt;

#set tolerance
Context()->flags->set(
tolerance=>.01);

