Context("Numeric");
#given
$omegaMN = random(70,90,1);

#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*538;
$height = $imgScale*356;

#computation for velocities
$Vc = 0.1*$omegaMN;
$omegaOC = $Vc/.4;
$Va = 0.25*$omegaOC;
$omegaAD = $Va/.4;
$Vd = .3*$omegaAD;
$omegaBD = $Vd/.5;

#a_D = a_A + a_D/A
$Ad_n = ($Vd**2)/.5; 
$Aa = ($Va**2)/.25; 
$Ada_n = .5*$omegaAD**2; 
$theta = arctan(400/300);
$alphaDA = ($Ada_n*cos($theta) - $Ad_n)/(.5*sin($theta));
$alphaBD = 1/.5*(-1*$Aa + $Ada_n*sin($theta)+.5*$alphaDA*cos($theta));

#set tolerance
Context()->flags->set(
tolerance=>.01);

