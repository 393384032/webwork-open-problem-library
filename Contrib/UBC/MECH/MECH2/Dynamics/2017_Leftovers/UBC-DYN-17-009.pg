Context("Numeric");
#given
$x = random(0,.4,.01);
$xd = .1;

#image scale
$imgScale = .35;

#image aspect ratio
$width = $imgScale*2334;
$height = $imgScale*1770;

#computation
$y = 3.6*$x*$x+.1;
$yd = 7.2*$x*$xd;
$ydd = 7.2*$xd*$xd;
$theta = arctan($yd/$xd);
$an = $ydd*cos($theta);
$at = $ydd*sin($theta);
$v = sqrt($xd**2 + $yd**2);
$r = ($v**2)/$an;

#set tolerance
Context()->flags->set(
tolerance=>.01);

