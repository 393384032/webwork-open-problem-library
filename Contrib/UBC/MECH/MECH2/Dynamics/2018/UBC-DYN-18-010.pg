Context("Numeric");
#given
$OB = 0.9; #m
$BD = 0.6; #m
$AB = 1.2; #m
$VA = random(.2,.5,.1);


#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*362;
$height = $imgScale*407;

#computation
$AC = 2; #m
$DC = 1.709; #m
$Beta = 32.6; #degree
$VD = ($DC/$AC)*$VA;
$VE = $VD*cos($Beta*pi/180);



#set tolerance
Context()->flags->set(
tolerance=>.02);

