#computation
$VB = $VA*0.8;
$V_BA = $VA*0.6;
$Omega_CB = $VB/0.5;
$Omega_AB = $V_BA/0.5;
$a_Bn = 0.5*($Omega_CB**2);
$a_BAn = 0.5*($Omega_AB**2);
$alpha = $a_BAn/0.5;

#set tolerance
Context()->flags->set(
tolerance=>.02);

