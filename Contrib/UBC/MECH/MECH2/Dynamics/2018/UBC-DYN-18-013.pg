#computation
$wAC = $Vc/0.5/cos(45*pi/180);
$aBCn = 0.5*$wAC**2;
$aBC = $aBCn/0.5;
$aACn = ($AB +0.5)* $wAC**2;
$aA =  $aACn*sqrt(2);

#set tolerance
Context()->flags->set(
tolerance=>.01);

