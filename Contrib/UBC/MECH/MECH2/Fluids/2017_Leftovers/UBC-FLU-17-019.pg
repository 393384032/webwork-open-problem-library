Context("Numeric");
#given
$h1 = random(0,0.3,.01);
$h2 = random(0,0.4,.01);
$h3 = random($h2,1,.01);

#image scale
$imgScale =0.2;

#image aspect ratio
$width = $imgScale*1573;
$height = $imgScale*1265;

#computation 
$pAir = 9.81*(13600*$h3 - 850*$h2 - 1000*$h1)/1000;

#set tolerance
Context()->flags->set(
tolerance=>.01);

