Context("Numeric");
#given
$h = random(20,50,.1);

#image scale
$imgScale =0.2;

#image aspect ratio
$width = $imgScale*1787;
$height = $imgScale*1343;

#computation 
$p = 101 + 1.03*9.81*$h;

#set tolerance
Context()->flags->set(
tolerance=>.01);

