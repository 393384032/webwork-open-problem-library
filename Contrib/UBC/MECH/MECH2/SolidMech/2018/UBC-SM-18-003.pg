Context("Numeric");
#given
$m1 = 1000;
$m2 = 2000;
$p = 500;
$d2 = .2;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1186;
$height = $imgScale*1718;

#computation 
$ab = $m1*9.81;
$bc = ($m1 - $p)*9.81;
$cd = ($m1 + $m2 - $p)*9.81;
$d1 = sqrt($ab/$bc)*$d2;
$d3 = sqrt($cd/$bc)*$d2;


