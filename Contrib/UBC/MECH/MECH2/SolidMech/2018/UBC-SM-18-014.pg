Context("Numeric");
#given
$p = 20;
$h = 100;
$b = 50;
$d = 10;
$tauAllow = 25;
$delta = 5;
$g = 10;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1768;
$height = $imgScale*2404;

#computation 
$tau = $p*1000/($b*$h);
$gamma = $tau/$g;
$t=$delta/sin($gamma);
$n = $p*1000/($tauAllow*pi/4*($d**2));
$num = ceil($n);

