Context("Numeric");
#given
$l = 1.5;
$area = 8;
$p = 100;
$t = 40;

#image scale
$imgScale = .25;

#image aspect ratio
$width = $imgScale*1876;
$height = $imgScale*728;

#computation 
$pD = 2/5*$p;
$pB = 2*$pD;
$r = $pD + $pB + $p;
$sigmaAB = -$pB/$area*10;
$sigmaCD = -$pD/$area*10;
$deltaE = $sigmaAB/100*$l;

$atea = -20*$t*100*$area/10000;

$pB2 = 1/5*($atea+4*$p);
$pD2 = 2*$p-2*$pB2;
$r2 = $pD2 + $pB2 + $p;
$sigmaAB2 = -$pB2/$area*10;
$sigmaCD2 = -$pD2/$area*10;
$deltaE2 = -($sigmaAB2/100+($t*20)/1000)*$l;

