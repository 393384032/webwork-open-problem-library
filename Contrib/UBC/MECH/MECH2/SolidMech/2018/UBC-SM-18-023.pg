Context("Numeric");
#given
$a = 10; #mm
$l = .2; #m
$q = 100; #Nm/m
$tm = 50; #Nm
$g = 80;

#image scale
$imgScale = .25;

#image aspect ratio
$width = $imgScale*1640;
$height = $imgScale*1092;


#computation 
$te = $tm - $q*$l;
$taumax = 2*$tm/(pi*($a**3))*1000;
$tauemax = $te/$tm * $taumax;
$phi = $l*(2*$tm-$q*$l/2)/($g*pi/2*(($a/1000)**4)*(10**9))*180/pi;


