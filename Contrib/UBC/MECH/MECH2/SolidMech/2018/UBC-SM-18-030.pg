Context("Numeric");
#given
$r = .25;
$t = .025;
$p = 250;
$m = 20;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1969;
$height = $imgScale*739;

#computation 
$R = $r + $t;
$stheta = $p*$r/$t;
$sa = $p*$r/(2*$t);
$tau = $m * $R *2/(pi*($R**4 - $r**4));

$c = ($stheta + $sa)/2;
$r = sqrt(((($stheta-$sa)/2)**2)+($tau**2));
$smax = $c + $r;
$smin = $c - $r;
$theta = arctan(abs($tau*2/($stheta-$sa)))/2*180/pi;

