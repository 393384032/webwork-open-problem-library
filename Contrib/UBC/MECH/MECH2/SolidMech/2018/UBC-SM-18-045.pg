Context("Numeric");
#given
$w = 25;
$h = 60;
$f = 250;
$thetaD = 20;
$thetaR = $thetaD*pi/180;

#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*588;
$height = $imgScale*183;

#computation 
$sx = $f/($w*$h);
$c = ($sx + $sy)/2;
$r = sqrt(((($sx-$sy)/2)**2)+($tau**2));

$sigmaX = ($c + $r*cos(2*$thetaR))*1000;
$sigmaY = ($c - $r*cos(2*$thetaR))*1000;
$tau = $r*sin(2*$thetaR)*1000;

##############################################################
