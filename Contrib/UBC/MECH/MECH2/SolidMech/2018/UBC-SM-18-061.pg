Context("Numeric");
#given
$r = 1.25;
$t = 15;
$p = 8;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2287;
$height = $imgScale*995;

#computation 
$stheta = $p * $r / $t;
$atheta = $stheta/2;

$sigma = ($stheta + $atheta)/2*1000;
$tau = ($stheta - $atheta)/2*1000;

