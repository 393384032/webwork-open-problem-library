Context("Numeric");
#given
$l = 10;
$d = .5;
$thetaD = 30;
$thetaR = $thetaD*pi/180;
$load = 1500;
$yield = 30;
$sf = 2;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1913;
$height = $imgScale*1870;

#computation 
$area = pi * $d *$d /4;
$flim = $yield * $area / $sf;
$x = $flim * 12 * $l * sin($thetaR)/$load*1000/12;


