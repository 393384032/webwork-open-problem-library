DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$fact=random(1.5,6,.1);
$point=random(.5,5,.1);
$exponent=random(.7,2.3,.2);

Context("Formula");

$P = Compute("$fact * x^{$exponent}")->reduce;
$dP = $P->d;

Context("Numeric");
$ans=$dP->eval(x=$point);

BEGIN_TEXT
Let \( p(x)= $P \).
Use a calculator or a graphing program to
find the slope of the
tangent line to the point \( \left(x,p(x)\right) \) at  \( x= $point \).
Give  the answer to 3 places.$BR$BR
slope = \{ans_rule(30)\}
END_TEXT

ANS($ans->cmp);
ENDDOCUMENT();        # This should be the last executable line in the problem.
