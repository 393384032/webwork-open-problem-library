DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl',
	'PGcourse.pl',
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$x1 = random(-3,3,6);
$y1 = random(-1,1,2);

Context('Fraction');
$m = Fraction(
	25*$x1 - 4*$x1*($x1*$x1 + $y1*$y1),
	4*($x1*$x1 + $y1*$y1)*$y1 + 25*$y1
)->reduce;

##############################################################
#
#  Text
#
#

BEGIN_TEXT
Find the slope of the tangent line to the curve (a lemniscate)
 \[ 2(x^ 2 + y^2)^2 = 25(x^2 - y^2) \]
at the point \( ($x1 , $y1) \).
$BR $BR
\( m = \) \{ ans_rule(5) \}
END_TEXT

##############################################################
#
#  Answers
#
#

ANS($m->cmp);

COMMENT('MathObject version');

