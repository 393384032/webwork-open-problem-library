DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
#"PGchoicemacros.pl",
#"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");

$a1 = random(2,5,1);
$x1 = Real(random(1,5,1));
$f = Compute("$a1*x*sin(x)*cos(x)");
$deriv = $f->D('x');
$derVal = $deriv->substitute(x=>$x1);

Context()->texStrings;
BEGIN_TEXT
If \( f(x) =  $f \), find \( f'( x ) \).
$BR 
\(f'(x)=\)\{ans_rule(50) \}
$BR $BR
END_TEXT

Context()->normalStrings;
ANS($deriv->cmp);

Context()->texStrings;
BEGIN_TEXT
Find \( f'( $x1 ) \).
$BR
\(f'($x1)=\)\{ans_rule(50) \}
END_TEXT

Context()->normalStrings;
ANS($derVal->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
