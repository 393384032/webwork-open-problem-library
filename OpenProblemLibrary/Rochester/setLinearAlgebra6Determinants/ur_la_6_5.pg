$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

do { 

$A = Matrix([
[random(-5,5,1),random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1),random(-5,5,1)],
]);

$Adet = $A->det();

} until ( $Adet != 0 );


Context()->texStrings;
BEGIN_TEXT
Find the determinant of the matrix \[C = $A.\] 
$BR
\(\det(C)=\) \{ $Adet->ans_rule(10) \}.
END_TEXT
Context()->normalStrings;

ANS( $Adet->cmp );

