## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(function_notation_deriv_at_point)
## MLTleader(1)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('21')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->variables->are(
	x => 'Real',
	f => [ 'Real', TeX => "f(x)" ]
);
do {
	$xo = non_zero_random(-5, 5);
	$fo = random(-5, -1);
	$a = non_zero_random(1, 9);
	$b = non_zero_random(1, 9);
	$F = Formula(
		"$a*f + $b*x^2*f^3"
	)->reduce;
	$k = (-$F)->eval(
		x => $xo,
		f => $fo
	);
} until (
	0 < $k and $k < 100 and
	gcd($a, gcd($b, $k)) == 1
);

$G = ($k + $F)->reduce;

$Gxo = $G->D('x')->eval(
	x => $xo,
	f => $fo
);
$Gfo = $G->D('f')->eval(
	x => $xo,
	f => $fo
);

Context('Fraction');
$fpxo = Fraction(-$Gxo, $Gfo)->reduce;

Context()->texStrings;
BEGIN_TEXT
If \( $G = 0 \) and \( f($xo) = $fo \),
find \( f'($xo) \).
$BR $BR
\(f'($xo) = \) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

ANS($fpxo->cmp);

ENDDOCUMENT();
