DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
"parserFormulaUpToConstant.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = Real(random(6,18,2));
$b = Real(random(3,5,1));

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral:
$BR
$PAR
   \( \displaystyle{ \int $a x^{-$b} \,dx} = \)
   \{ans_rule(25) \}.
$BR
$BR
END_TEXT
Context()->normalStrings;

$ans = FormulaUpToConstant("($a*x**(-$b+1))/(-$b+1)");
ANS($ans->cmp());

ENDDOCUMENT();
