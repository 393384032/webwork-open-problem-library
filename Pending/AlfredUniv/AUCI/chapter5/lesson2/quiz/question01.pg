DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"MathObjects.pl",
);

TEXT(beginproblem());
Context("Numeric");
Context()->variables->add(t=>"Real");

$showPartialCorrectAnswers = 1;

$a = random(3,8,1);
$f = Formula("e^($a*t)");
$df = $f->D('t');

Context()->texStrings;
BEGIN_TEXT
If \(f(t) = $f\) then \(f^\prime(t) = \) \{ans_rule(35) \}.
END_TEXT
Context()->normalStrings;
ANS($df->cmp());

ENDDOCUMENT();
