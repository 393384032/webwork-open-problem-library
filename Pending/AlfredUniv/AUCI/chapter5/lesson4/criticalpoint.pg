DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

$showPartialCorrectAnswers = 1;
Context("Numeric");

$k = Real(random(2,9));
$m = Real(random(2,9));

$f = Formula("(e^($k*x)+$m)/e^x");
$df = $f->D('x');
$cp = Real("-ln(($k-1)/$m)/$k");
Context()->texStrings;
BEGIN_TEXT
If \(f(x) = $f\) then \(f^\prime(x) = \) \{ans_rule\}
$BR
The critical point(s) of \(f\) are \{ans_rule\}
\{ AnswerFormatHelp("logarithms") \}
END_TEXT
ANS($df->cmp() );
ANS($cp->cmp() );
Context()->normalStrings;


ENDDOCUMENT();