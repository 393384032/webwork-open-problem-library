do {$d = random(2,10,1)} until (gcd($c, $d) ==1);
do {$e = random(2,10,1)} until ($e != $d && gcd($e,$c) ==1);

$expression = " \left($a $var^{\frac{$d}{$c}}\right)\left($b $var^{\frac{$e}{$c}}\right) ";

$answer1 = $a*$b;

Context("Fraction-NoDecimals");
$answer2 = Fraction($d + $e,$c);

