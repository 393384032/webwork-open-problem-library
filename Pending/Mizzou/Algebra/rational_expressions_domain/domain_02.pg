########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"PGunion.pl",
);

TEXT(beginproblem());


#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(2,10,1);
$b = random(2,10,1);
do {$c = random(2,10,1)} until (gcd($c,$b) ==1);

## Functions
$f = " \displaystyle \frac{$a}{$b - $c x}";

Context("Interval");
$dom = Compute("(-inf, $b/$c) U ($b/$c, inf)");
$texanswer = "\( \left(-\infty, \frac{$b}{$c}\right) \cup \left(\frac{$b}{$c},\infty\right)\)";

## Answers
ANS( $dom->cmp() );

 
Context("Numeric");
################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
Find the domain of
$BR
\[
$f
\]
$PAR
Write your answer in interval notation.
$PAR
Domain: \{ans_rule(20)\} $SPACE $SPACE \{ AnswerFormatHelp("inequalities", "Click here for help using interval notation") \}.
END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version');
ENDDOCUMENT();