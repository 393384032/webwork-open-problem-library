###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
$a = random(2,5,1);
$b = $a + random(2,5);
$x = Fraction($a*$b,($a+$b));

Context()->texStrings;
$dispans = $x;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
An experienced tinter can tint a car in \($a\) hours. A beginning tinter needs \($b\) hours to complete the same job. Find how long it takes for the two to do the job together.
$PAR
Answer: \{ans_rule(15)\} hours
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($x->cmp(studentsMustReduceFractions=>1));


ENDDOCUMENT();