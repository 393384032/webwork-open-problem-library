##DESCRIPTION
##  Solving Quadratic Equations by factoring
##ENDDESCRIPTION


## BookTitle('Algebra: Form and Function')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## Date(Spring 2012)
## Institution(University of Missouri)
## Status(R)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('.5')
## Problem1('')
## KEYWORDS('quadratic', 'equations')


########################################
#  Initialization


DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

##############################################
#  Setup

Context("Numeric");
$c = list_random(2,3,4,5,6,7,8,9,10);
$m = list_random(-3,-2)*$c;
do {$n = -1*list_random(2,3,4,5,6,7,8,9,10)} until ($n != -$m && $n != -$m + 1 && $n != -$m - 1 );
$a = $m*$n/$c;
$b = $m + $n;


$eqn = "$a x^2 + $b x + $c = 0";
$var = "x";

Context("Fraction-NoDecimals");
$answer = List( Fraction(-$c,$m), Fraction(-$c,$n) );

##############################################
#  Main text
Context()->texStrings;
BEGIN_TEXT

Solve the equation for \($var\).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$PAR
\[ $eqn \]
$PAR
\( $var \) = \{ ans_rule(30) \}
$PAR
\{ AnswerFormatHelp("numbers", "Click here for help entering numbers in WeBWorK") \}
$PAR
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $answer\)
    $PAR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('TRASH. REPEAT');
ENDDOCUMENT();