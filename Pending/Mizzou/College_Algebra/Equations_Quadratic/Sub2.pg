##DESCRIPTION
##  Solving Quadratic Equations by factoring
##ENDDESCRIPTION


## BookTitle('Algebra: Form and Function')
## Author1('David Covert')
## Author2('Teri Christiansen')
## DBsubject(Algebra)
## Date(Spring 2012)
## Institution(University of Missouri)
## Status(R)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('.5')
## Problem1('')
## KEYWORDS('quadratic', 'equations')


########################################
#  Initialization


DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,5,1);
$b = random(3,6,1); 
$c = random(5,9,1);

$ccpb = $c*$c + $b;

$eqn = "(x + $a)^2 + $b = $ccpb";
$var = "x";

$answer = List( Compute("$c-$a"), Compute("-$c-$a") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
$PAR
$BR
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );

PeriodicRerandomization("3"); #Problem resets itself after 3 attempts

PeriodicStatus(
 "Generate a new version of this problem",
 "You have ${attempts_modp_remaining} attempt(s) remaining before you will receive a new version of this problem."
 );


COMMENT('TRASH.REPEAT');
ENDDOCUMENT();