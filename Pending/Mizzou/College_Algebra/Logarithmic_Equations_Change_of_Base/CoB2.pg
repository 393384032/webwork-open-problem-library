TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Numeric");


$a = random(101,1000,1);
do {$b = random(2,99,1)} until (gcd($a,$b) == 1 && $b != 10);
$adec = $a/100;

$expression = "\log_{$b}($a)";

$num = $adec;
$den = $b;

ANS(Compute($num)->cmp() );
ANS(Compute($den)->cmp() );



###################################
# Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following quantity  by applying a change of base.
$PAR
\[
\log_{$b}($adec) = \frac{\ln(m)}{\ln(n)}
\]
$PAR
where
$PAR
\(m = \) \{ans_rule(10)\}
$BR
\(n = \) \{ans_rule(10)\}

END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $num\), \(n = $den\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



