$var2 = list_random('p','q','r','k','m','n');
$var3 = list_random('x','y','z','w','u','v');

$k = random(2,10,1);
do {$m = random(2,10,1)} until ($k != $m);
do {$n = random(2,10,1)} until ($n != $m && $n != $k);

$quantity = " \ln\left( \dfrac{e^{$k} x^{$m}}{y^{$n}} \right)";

ANS( Compute($k)->cmp() );
ANS( Compute($m)->cmp() );
ANS( Compute(-$n)->cmp() );


