"AnswerFormatHelp.pl",
"contextFraction.pl",
"PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Numeric")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('p','q','r','u','v','x','y','z');
$var1 = list_random('x','y','z','w','v');
$var2 = list_random('p','q','r','u');

$n = random(3,10,1);
do {$m = random(3,10,1)} until ($n != $m);

$expression = " \sqrt[$n]{\sqrt[$m]{$var}}";

Context("Fraction-NoDecimals");
$answer = Fraction(1,$n*$m);

Context()->texStrings;
BEGIN_TEXT
Simplify and write the following using a rational exponent. If
$PAR
\[$expression = $var^m \]
$PAR
then
$PAR
\(m = \) \{ANS_RULE(5)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

ANS($answer->cmp(studentsMustReduceFractions=>1) );

COMMENT('MathObject version');
