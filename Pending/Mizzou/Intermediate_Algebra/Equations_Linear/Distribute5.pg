##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(-1,1,2)*random(2,10,1);
$b = random(2,10,1);
do {$c = random(-1,1)*random(2,10,1)} until ($a*$c < 0);
$d = random(2,10,1);

$b4 = 4 * $b;

$var = "x";
$eqn = "$a (x  + $b)= $c x + $d";

$num = $d - $a*$b;
$den = $a - $c;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \)
\{ ans_rule(20) \}
END_TEXT

Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $PAR
    ${BBOLD}Note:${EBOLD} Write ${BBOLD}no solutions${EBOLD} if no solutions exist or ${BBOLD}infinitely many${EBOLD} if there are infinitely many solutions. 
    $BR
    END_TEXT
}

Context()->normalStrings;




###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp(studentsMustReduceFractions=>1) );


PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();