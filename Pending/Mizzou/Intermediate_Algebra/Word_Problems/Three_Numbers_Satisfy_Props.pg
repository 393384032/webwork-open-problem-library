# DESCRIPTION
# Find the numbers satisfying the given properties
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Functions)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Status(R)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('1.5')
## Problem1('49 50')
## KEYWORDS('functions', 'algebra, application of linear equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextCurrency.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
do {
  $sum = random(180,450);
  $times = random(2,5,1);
  $moreless = random(0,1,1);
  $cmoreless = random(2,20,1);
  if ($moreless == 0) {
    $A = ($sum + $cmoreless)/(2 + $times);
    $mlstring = "less";
    $C = $A - $cmoreless;
  } else {
    $A = ($sum - $cmoreless)/(2 + $times);
    $mlstring = "more";
    $C = $A + $cmoreless;
  }
} until ($A == floor($A));

if ($times == 2) {
  $tstring = "twice";
} elsif ($times == 3) {
  $tstring = "three times";
} elsif ($times == 4) {
  $tstring = "four times";
} else {
  $tstring = "five times";
}
$B = $times*$A;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
A second number is $tstring a first number. A third number is $cmoreless $mlstring than the first number. If the sum of the three numbers is $sum, find the numbers.
$PAR
First Number: \{ans_rule(6)\} 
$BR
Second Number: \{ans_rule(6)\} 
$BR
Third Number: \{ans_rule(6)\} 
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($A)->cmp());
ANS(Compute($B)->cmp());
ANS(Compute($C)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(A = $A\), \(B = $B\), \(C = $C\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();