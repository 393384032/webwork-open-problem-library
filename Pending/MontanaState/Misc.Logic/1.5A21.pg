# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$statement = "\) If \( x > 5\), then \(x^{2} > 25";

$radio = new_multiple_choice();
$radio->qa("Choose the correct statement:","\( x \leq 5 \) or \( x^{2} > 25\)");
$radio->extra("\( x > 5\) or \(x^{2} \leq 25 \)", "\(x > 5\) or \( x^{2} > 25\)", "\(x^{2} \leq 25\) or \(x \leq 5\)");

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
Use the logical equivalence "On Or" to restate the sentence. $BR $BR
$BCENTER
\($statement\)
$BR
$BR
$ECENTER
\{$radio->print_q()\}
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

$showPartialCorrectAnswers = 0;

ANS(radio_cmp($radio->correct_ans()));

############################
# Solution


ENDDOCUMENT();
