Context("Numeric");
#given
$VTG = random(1.5,2,0.1);

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2254;
$height = $imgScale*1995;

#computation
$alpha = arctan(3/4); #rad
$VCD = $VTG *sin($alpha)/sin(2*$alpha); #m/s
$V = $VCD*sin($alpha); #m/s


#set tolerance
Context()->flags->set(
tolerance=>.01);

