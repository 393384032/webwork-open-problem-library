#  Setup
#
#

Context("Numeric");
Context()->variables->add(shear=>"Real");
Context()->variables->add(normal=>"Real");
#given
$sigmaUlt = 20; #mpa
$tauUlt = 12; #mpa
$area = 100; #mm
$theta = 60; #30-60 deg, range
$thetaR = 60*pi/180;

#image scale
$imgScale = .25;

#image aspect ratio
$width = $imgScale*1452;
$height = $imgScale*353;

#computation 
$norm = 1/2*(1+cos(2*$thetaR));
$shear = 1/2*(sin(2*$thetaR));

if(($norm/$shear)<($sigmaUlt/$tauUlt)){
	$failure = "shear";
	$load = $tauUlt*$area/$shear;
}
else {
	$failure = "normal";
	$load = $sigmaUlt*$area/$norm;
}

