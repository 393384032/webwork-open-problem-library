Context("Numeric");
#given
$d = 1;
$t = 20;
$p = 1;
$bsigma = 125;
$l = .8;
$bd= 20;

#image scale
$imgScale =.6;

#image aspect ratio
$width = $imgScale*471;
$height = $imgScale*535;

#computation 
$r = $d/2;
$stheta = $p*$r/$t*1000;
$sa = $p*$r/(2*$t)*1000;
$sr = 0;
$da = $l * (1/200*($sa - .3*$stheta));
$f = $p * pi*($r**2);
$n = $f/($bsigma * pi * (($bd/2000) ** 2));
$num = ceil($n);

