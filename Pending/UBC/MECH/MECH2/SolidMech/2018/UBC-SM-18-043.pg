Context("Numeric");
#given
$l = .5;
$od = 38;
$id = 36;
$torque = 20;
$g = 25;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1300;
$height = $imgScale*1269;

#computation 
$r = ($od+$id)/4;
$t = ($od - $id)/2;
$phi = $torque*$l / (2*pi*($r**3)*$t*$g)*180/pi*1000;

