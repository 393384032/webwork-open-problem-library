Context("Numeric");
#given
$l = 350;
$eb = 100;
$ea = 72;
$db = 20; #20-30
$da = 45; #35-45
$e = .1;
$by = 120;
$ay = 80;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1623;
$height = $imgScale*1607;

#computation 
$areaB = $db * $db * pi / 4;
$areaA = $da * $da * pi / 4 - $areaB;

$epsilon = $e/100;
$sb = $eb * $epsilon;
$sa = $ea * $epsilon;
$fb = $sb * $areaB;
$fa = $sa * $areaA;
$f = $fa + $fb;
$kb = $by/$sb;
$ka = $ay/$sa;

if ($ka < $kb) {
	$fmax = $f * $ka/1000;
}
else {
	$fmax = $f * $kb/1000;
}

