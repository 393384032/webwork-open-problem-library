Context("Numeric");
#given
$e = 210;
$l = 1.5;
$load = 6;
$d = 12;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1979;
$height = $imgScale*1377;

#computation 
$fa = 2/3*$load;
$fc = 1/3*$load;
$area = pi * $d * $d / 4;
$da = $fa*$l/($area*$e);
$dc = $fc*$l/($area*$e);
$deltaE = ($dc + 2/3*($da - $dc))*1000;


