Context("Numeric");
#given
$sx = 30;
$sy = 15;
$ex = 550;
$ey = 100;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*1801;
$height = $imgScale*1090;

#computation 
$v = ($sy*$ex - $sx*$ey)/($sx*$ex - $sy*$ey);
$ez = $v/($v-1)*($ex + $ey);

