Context("Numeric");
#given
$d = 20;
$t1 = 80;
$t2 = 20;
$t3 = 30;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2075;
$height = $imgScale*1140;

#computation 
$tbc = $t1;
$tcd = $t1-$t2;
$tda = $t1-$t2+$t3;
$g = 210/(2*(1+.3));
$j = pi/2 * ($d**4)/16;
$phi = ($tbc*.8 + $tcd*.6 + $tda*.2)/($g*$j)*1000*180/pi;

